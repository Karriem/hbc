# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                            controllers.Application.index

# Diagnosis

# POST    /diagnosis/create/:dia/:di/:qa        controllers.DiagnosisController.create(dia, di, q)
GET        /diagnosis/getDiagnosis/:id                  controllers.DiagnosisController.getDiagnosis(id: Long)
GET        /diagnosis/getDisease/:id                    controllers.DiagnosisController.getDisease(id: Long)
GET        /diagnosis/getCaregiversDiagnosis/:id        controllers.DiagnosisController.diagnosisPerCaregiver(id: Long)

# Measurement

# POST    /measurement/create/:m/:pID/:cID      controllers.MeasurementController.createMeasurement(m, pID, cID)
GET        /measurement/getMeasurements/:id             controllers.MeasurementController.getMeasurements(id: Long)

# Unplanned Visit

# POST  /unplannedVisit/create                  controllers.UnplannedVisitController.createUnplannedVisit()
GET        /unplannedVisit/listVisits                   controllers.UnplannedVisitController.getUnplannedVisits


# Daily Report
# POST /dailyReport/create                      controllers.DailyReportController.create()
GET        /dailyReport/timesheet/:id                   controllers.DailyReportController.getTimeSheetDetails(id: Long)
GET        /dailyReport/category/:id                    controllers.DailyReportController.getCategory(id: Long)
GET        /dailyReport/diagnosis/:id                   controllers.DailyReportController.getDiagnosis(id: Long)
GET        /dailyReport/patientsReports/:id             controllers.DailyReportController.getReportByPatient(id: Long)
GET        /dailyReport/caregiversReports/:id           controllers.DailyReportController.getReportByCaregiver(id: Long)
GET        /dailyReport/allReports                      controllers.DailyReportController.getAllReports

# QuestionAnswer

# POST   /questionAnswer/create/:id             controllers.QuestionAnswerController.createQuestionAnswer()
GET        /questionAnswer/getPerDiagnosis/:id          controllers.QuestionAnswerController.getQuestionAnswer(id: Long)

# Schedule

# POST  /schedule/create/                       controllers.ScheduleController.createSchedule()
GET        /schedule/getTimeSheet/:id                   controllers.ScheduleController.getTimeSheetDetails(id: Long)
GET        /schedule/patientSchedule/:id                controllers.ScheduleController.getSchedulePerPatient(id: Long)
GET        /schedule/caregiverSchedule/:id              controllers.ScheduleController.getSchedulePerCaregiver(id: Long)

# Weekly Report

# POST /weeklyReport/create/                    controllers.WeeklyReportController.create
GET        /weeklyReport/totalVisits/:id                controllers.WeeklyReportController.getTotalVisits(id: Long)
GET        /weeklyReport/referralCheck/:id              controllers.WeeklyReportController.checkForReferral(id: Long)
GET        /weeklyReport/allDailyReports/:id            controllers.WeeklyReportController.getAllDailyReports(id: Long)

#Get addresses
GET        /address/contactPersonAddress/:id            controllers.AddressController.listContactPersonAddress(id: Long)
GET        /address/coordinatorAddress/:id              controllers.AddressController.listCoordinatorAddress(id: Long)
GET        /address/caregiverAddress/:id                controllers.AddressController.listCaregiverAddress(id: Long)
GET        /address/patientAddress/:id                  controllers.AddressController.listPatientAddress(id: Long)
GET        /address/allAddresses/                       controllers.AddressController.listAllAddresses




# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                controllers.Assets.at(path="/public", file)
